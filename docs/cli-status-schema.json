{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/geho/packer-hybrid/docs/cli-status-schema.json",
  "title": "packer-hybrid status output",
  "description": "Canonical schema enforced by the CLI spec (Status/Inspect)",
  "type": "object",
  "required": ["version", "targets", "sources", "state", "issues"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version (semver) emitted by status"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "UTC timestamp when the report was generated"
    },
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "os", "status"],
        "properties": {
          "name": { "type": "string" },
          "os": { "type": "string" },
          "status": { "type": "string", "enum": ["pending", "validated", "drift", "error"] },
          "manifest": { "type": "string", "description": "Path to manifest file" },
          "issues": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "sources": {
      "type": "array",
      "description": "Plugin/example repositories and SHAs",
      "items": {
        "type": "object",
        "required": ["repo", "sha", "status"],
        "properties": {
          "repo": { "type": "string" },
          "sha": { "type": "string" },
          "status": { "type": "string", "enum": ["clean", "dirty"] }
        }
      }
    },
    "state": {
      "type": "object",
      "description": "Selected fields from state/packer-hybrid.json",
      "required": ["hash", "updated_at"],
      "properties": {
        "hash": { "type": "string" },
        "updated_at": { "type": "string", "format": "date-time" }
      }
    },
    "issues": {
      "type": "array",
      "description": "Summary of outstanding remediation items (spec + description)",
      "items": {
        "type": "object",
        "required": ["spec", "description", "severity"],
        "properties": {
          "spec": { "type": "string", "description": "Reference to docs/spec-remediations/<spec>.md" },
          "description": { "type": "string" },
          "severity": { "type": "string", "enum": ["info", "warning", "critical"] }
        }
      }
    }
  }
}
